	DEVICE ZXSPECTRUM48

	ORG #8000
start:
	call copy_buffer
	ld de, hello

loop:
	ld a, (de)
	or a
	jr z, read
	rst 0x10
	inc de
	jr loop


read:
	call read_key
	or a
	jr z, read
	rst 0x10
	.8 halt
	jr read

hello: db 'Press any key!', 0

	include "keyboard.z80"
	include "screen.z80"


end:
	SAVETAP TAPNAME,CODE,"panda48",start,end-start
